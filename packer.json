        "eu-central-1",
        "ap-southeast-1",
        "ap-southeast-2",
        "ap-northeast-1",
        "sa-east-1"
      ],
      "tags": {
        "Name": "bastion",
        "Timestamp": "{{user `timestamp`}}",
        "Tools": "MySQL"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "mysql.sh"
    }
