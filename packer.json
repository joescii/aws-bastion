    "aws_region": "us-east-1",
    "source_ami": "ami-896d93cd",
    "timestamp": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami": "{{ user `source_ami` }}",
